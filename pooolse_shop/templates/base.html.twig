<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}DemoCart{% endblock %}</title>
        <link rel="icon" href="{{ asset('logo.svg') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('global.css') }}">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
         
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <script>
            const shoppingCartPriceUrl = "{{ path('shoppingCartPrice') }}";
        </script>
        {% block header %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light menu border-bottom fixed-top" id="navMenu">
            <div class="container-fluid">
                <div class="d-flex align-items-center moveTransition">
                    <a class="navbar-brand d-flex align-items-center" href={{ path('homepage') }}>
                        <img src="{{ asset('logo.svg') }}" alt="Logo" height="50" width="50">
                        <div class="ms-3">DemoCart</div>
                    </a>
                </div>
                <div class="d-flex ms-auto align-items-center">
                    <div id="shoppingCartBox" class="me-3">
                        <a id="cartLink" class="d-flex align-items-center text-decoration-none" href={{ path('cart') }}>
                            <div>
                                <svg id="cartIcon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="#535458">
                                    <path fill="none" d="M0 0h24v24H0z"></path>
                                    <path d="M4 6.414L.757 3.172l1.415-1.415L5.414 5h15.242a1 1 0 0 1 .958 1.287l-2.4 8a1 1 0 0 1-.958.713H6v2h11v2H5a1 1 0 0 1-1-1V6.414zM6 7v6h11.512l1.8-6H6zm-.5 16a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm12 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"></path>
                                </svg>
                            </div>
                            <div id="cartText" class="mx-1">Kosár</div>
                            <div id="cartProductCount">0</div>
                        </a>
                    </div>
                    <div id="priceBox" class="d-flex align-items-center">
                        <span id="priceSummary">0</span>
                        <span>HUF</span>
                    </div>
                </div>
            </div>
        </nav>
        {% endblock %}

        {% block body %}
        {% endblock %}

        {% block footer %}
        
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <div class="col-md-4 d-flex align-items-center moveTransition">
                <a href={{ path('homepage') }} class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                    <img src="{{ asset('logo.svg') }}" alt="Logo" height="25" width="25" class="ms-3">
                </a>
                <span class="mb-3 mb-md-0 text-body-secondary">© 2024 DemoCart</span>
            </div>
            <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                <li class="ms-3 moveTransition"><a class="text-body-secondary" href="https://www.linkedin.com/in/g%C3%A1bor-lauter/"><i class="bi bi-linkedin fs-4"></i></a></li>
                <li class="ms-3 moveTransition"><a class="text-body-secondary" href="https://github.com/LaGabor?tab=repositories"><i class="bi bi-github fs-4 me-3"></i></a></li>
            </ul>
        </footer>
        {% endblock %}

    <script src="{{ asset('global.js') }}"></script>   
    </body>
</html>
